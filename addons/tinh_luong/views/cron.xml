<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="ir_cron_tao_bang_luong_thang" model="ir.cron">
            <field name="name">Tự động tạo bảng lương cuối tháng</field>
            <field name="model_id" ref="model_bang_luong"/>
            <field name="state">code</field>
            <field name="code">model.cron_tao_bang_luong_thang()</field>

            <!-- Chạy mỗi ngày -->
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>

            <!-- Chỉ chạy khi đến ngày cuối tháng -->
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
