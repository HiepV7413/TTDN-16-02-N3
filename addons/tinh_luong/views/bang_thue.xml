<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- TREE VIEW -->
        <record id="view_thue_thu_nhap_tree" model="ir.ui.view">
            <field name="name">thue.thu.nhap.tree</field>
            <field name="model">thue_thu_nhap</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ma_thue"/>
                    <field name="loai_thue"/>
                    <field name="ap_dung_tu"/>
                    <field name="ap_dung_den"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <!-- FORM VIEW -->
        <record id="view_thue_thu_nhap_form" model="ir.ui.view">
            <field name="name">thue.thu.nhap.form</field>
            <field name="model">thue_thu_nhap</field>
            <field name="arch" type="xml">
                <form string="Cấu hình Thuế TNCN">
                    <sheet>

                        <group>
                            <group>
                                <field name="name"/>
                                <field name="ma_thue"/>
                                <field name="loai_thue"/>
                                <field name="currency_id" readonly="1"/>
                            </group>

                            <group>
                                <field name="ap_dung_tu"/>
                                <field name="ap_dung_den"/>
                                <field name="trang_thai" readonly="1"/>
                            </group>
                        </group>

                        <group string="Giảm trừ">
                            <field name="giam_tru_ban_than"/>
                            <field name="giam_tru_nguoi_phu_thuoc"/>
                        </group>

                        <notebook>
                            <page string="Bậc thuế">
                                <field name="bac_ids">
                                    <tree editable="bottom">
                                        <field name="bac"/>
                                        <field name="muc_thu_nhap_tu"/>
                                        <field name="muc_thu_nhap_den"/>
                                        <field name="thue_suat"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Ghi chú pháp lý">
                                <field name="ghi_chu"/>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_thue_thu_nhap" model="ir.actions.act_window">
            <field name="name">Cấu hình Thuế TNCN</field>
            <field name="res_model">thue_thu_nhap</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
