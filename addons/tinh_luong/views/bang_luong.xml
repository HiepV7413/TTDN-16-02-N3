<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>
    <!-- TREE VIEW -->
    <record id="view_bang_luong_tree" model="ir.ui.view">
        <field name="name">bang.luong.tree</field>
        <field name="model">bang_luong</field>
        <field name="arch" type="xml">
            <tree string="Bảng lương">
                <field name="nhan_vien_id"/>
                <field name="thang"/>
                <field name="nam"/>
                <field name="luong_co_ban"/>
                <field name="so_ngay_di_lam"/>
                <field name="so_ngay_vang"/>
                <field name="tong_phut_di_muon"/>
                <field name="tong_phut_ve_som"/>
                <field name="tong_gio_tang_ca" sum="Tổng OT"/> <field name="tien_tang_ca" sum="Tổng tiền OT"/> <field name="tien_phat" sum="Tổng phạt"/>
                <field name="tong_luong"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_bang_luong_form" model="ir.ui.view">
    <field name="name">bang.luong.form</field>
    <field name="model">bang_luong</field>
    <field name="arch" type="xml">
        <form string="Bảng lương">
            <sheet>
                <group col="3">
                    <field name="nhan_vien_id"/>
                    <field name="thang"/>
                    <field name="nam"/>
                </group>

                <group>
                    <group string="Dữ liệu chấm công">
                        <field name="so_ngay_di_lam"/>
                        <field name="so_ngay_vang"/>
                        <field name="tong_gio_tang_ca" style="color: blue; font-weight: bold;"/> </group>
                    <group string="Vi phạm (Phút)">
                        <field name="tong_phut_di_muon"/>
                        <field name="tong_phut_ve_som"/>
                    </group>
                </group>

                <group string="Chi tiết tài chính">
                    <group>
                        <field name="luong_co_ban"/>
                        <field name="luong_ngay"/>
                    </group>
                    <group string="Thuế">
                        <field name="thue_id"/>
                        <field name="tien_thue_tncn" style="color:red;"/>
                    </group>

                    <group>
                        <field name="tien_tang_ca" style="color: green;"/> 
                        <field name="tien_thuong" style="color: green;"/>
                        <field name="tien_phat" style="color: red;"/>
                    </group>
                    <group string="Bảo hiểm">
                            <field name="tien_bh_ca_nhan" style="color:red"/>
                            <field name="tien_bh_xa_hoi" style="color:red"/>
                    </group>
                    <group>
                        <field name="tong_luong" widget="monetary" style="font-size: 1.2em; font-weight: bold;"/>
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>


    <!-- ACTION -->
    <record id="action_bang_luong" model="ir.actions.act_window">
        <field name="name">Bảng lương</field>
        <field name="res_model">bang_luong</field>
        <field name="view_mode">tree,form</field>
    </record>
</data>
</odoo>

