<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_bang_luong_tree" model="ir.ui.view">
        <field name="name">bang.luong.tree</field>
        <field name="model">bang_luong</field>
        <field name="arch" type="xml">
            <tree string="Bảng lương">
                <field name="nhan_vien_id"/>
                <field name="thang"/>
                <field name="nam"/>
                <field name="luong_co_ban"/>
                <field name="so_ngay_di_lam"/>
                <field name="so_ngay_vang"/>
                <field name="tong_phut_di_muon"/>
                <field name="tong_phut_ve_som"/>
                <field name="tong_luong"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_bang_luong_form" model="ir.ui.view">
        <field name="name">bang.luong.form</field>
        <field name="model">bang_luong</field>
        <field name="arch" type="xml">
            <form string="Bảng lương">
                <sheet>

                    <!-- THÔNG TIN CHUNG -->
                    <group col="3">
                        <field name="nhan_vien_id"/>
                        <field name="thang"/>
                        <field name="nam"/>
                    </group>

                    <!-- THÔNG TIN LƯƠNG -->
                    <group string="Thông tin lương" col="3">
                        <field name="luong_co_ban" readonly="1"/>
                        <field name="so_ngay_di_lam" readonly="1"/>
                        <field name="so_ngay_vang" readonly="1"/>
                    </group>

                    <!-- VI PHẠM -->
                    <group string="Vi phạm chấm công" col="2">
                        <field name="tong_phut_di_muon" readonly="1"/>
                        <field name="tong_phut_ve_som" readonly="1"/>
                    </group>

                    <!-- KẾT QUẢ -->
                    <group string="Kết quả tính lương" col="3">
                        <field name="luong_ngay" readonly="1"/>
                        <field name="tien_phat" readonly="1"/>
                        <field name="tong_luong" readonly="1"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <!-- ACTION -->
    <record id="action_bang_luong" model="ir.actions.act_window">
        <field name="name">Bảng lương</field>
        <field name="res_model">bang_luong</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>

