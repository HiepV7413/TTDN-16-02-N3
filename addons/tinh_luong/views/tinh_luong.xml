<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_tinh_luong_tree" model="ir.ui.view">
        <field name="name">tinh.luong.tree</field>
        <field name="model">tinh_luong</field>
        <field name="arch" type="xml">
            <tree string="Tính lương">
                <field name="nhan_vien_id"/>
                <field name="thang"/>
                <field name="nam"/>
                <field name="tong_so_gio_lam"/>
                <field name="luong"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_tinh_luong_form" model="ir.ui.view">
        <field name="name">tinh.luong.form</field>
        <field name="model">tinh_luong</field>
        <field name="arch" type="xml">
            <form string="Tính lương">
                <sheet>

                    <group col="3">
                        <field name="nhan_vien_id"/>
                    </group>

                <field name="thang"/>
                <field name="nam"/>
                <field name="tong_so_gio_lam"/>
                <field name="luong"/>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_tinh_luong" model="ir.actions.act_window">
        <field name="name">Tính lương</field>
        <field name="res_model">tinh_luong</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
