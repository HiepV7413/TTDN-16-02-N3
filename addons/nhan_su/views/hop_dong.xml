<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hop_dong_tree" model="ir.ui.view">
        <field name="name">hop_dong.tree</field>
        <field name="model">hop_dong</field>
        <field name="arch" type="xml">
            <tree string="Danh sách loại hợp đồng">
                <field name="ma_hop_dong"/>
                <field name="ten_hop_dong"/>
                <field name="loai"/>
                <field name="thoi_han_mac_dinh"/>
                <field name="so_nhan_vien"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_hop_dong_form" model="ir.ui.view">
        <field name="name">hop_dong.form</field>
        <field name="model">hop_dong</field>
        <field name="arch" type="xml">
            <form string="Loại hợp đồng">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="ma_hop_dong"/>
                            <field name="ten_hop_dong"/>
                            <field name="loai"/>
                        </group>
                        <group>
                            <field name="thoi_han_mac_dinh"/>
                            <field name="so_nhan_vien"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="mo_ta" placeholder="Mô tả chi tiết về loại hợp đồng này..."/>
                    </group>
                    
                    <notebook>
                        <page string="Danh sách nhân viên">
                            <field name="danh_sach_hop_dong_ids">
                                <tree string="Nhân viên đang dùng hợp đồng này">
                                    <field name="so_hop_dong"/>
                                    <field name="nhan_vien_id"/>
                                    <field name="ngay_bat_dau"/>
                                    <field name="ngay_ket_thuc"/>
                                    <field name="trang_thai"/>
                                    <field name="tong_luong"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hop_dong_search" model="ir.ui.view">
        <field name="name">hop_dong.search</field>
        <field name="model">hop_dong</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm loại hợp đồng">
                <field name="ma_hop_dong"/>
                <field name="ten_hop_dong"/>
                <field name="loai"/>
                
                <filter string="Đang sử dụng" name="active" domain="[('active','=',True)]"/>
                <filter string="Đã lưu trữ" name="inactive" domain="[('active','=',False)]"/>
                
                <separator/>
                <filter string="Thử việc" name="thu_viec" domain="[('loai','=','thu_viec')]"/>
                <filter string="Chính thức" name="chinh_thuc" domain="[('loai','in',['xac_dinh_thoi_han','khong_xac_dinh_thoi_han'])]"/>
                
                <group expand="0" string="Nhóm theo">
                    <filter string="Loại hợp đồng" name="group_loai" context="{'group_by':'loai'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hop_dong" model="ir.actions.act_window">
        <field name="name">Loại hợp đồng</field>
        <field name="res_model">hop_dong</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo loại hợp đồng mới
            </p>
            <p>
                Nhấn vào nút "Tạo" để thêm loại hợp đồng lao động mới.
            </p>
        </field>
    </record>

</odoo>