<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_luong_tree" model="ir.ui.view">
        <field name="name">luong.tree</field>
        <field name="model">luong</field>
        <field name="arch" type="xml">
            <tree string="Bảng lương">
                <field name="nhan_vien_id"/>
                <field name="thang"/>
                <field name="nam"/>
                <field name="so_cong"/>
                <field name="tong_luong"/>
            </tree>
        </field>
    </record>

    <record id="view_luong_form" model="ir.ui.view">
        <field name="name">luong.form</field>
        <field name="model">luong</field>
        <field name="arch" type="xml">
            <form string="Bảng lương">
                <sheet>

                    <group col="3">
                        <field name="nhan_vien_id"/>
                        <field name="thang"/>
                        <field name="nam"/>
                    </group>

                    <group col="3">
                        <field name="so_cong" readonly="1"/>
                        <field name="thuong"/>
                        <field name="phat"/>
                    </group>

                    <group>
                        <field name="tong_luong" readonly="1"
                               widget="monetary"/>
                    </group>

                    <notebook>
                        <page string="Chấm công tháng">
                            <field name="cham_cong_ids">
                                <tree editable="bottom">
                                    <field name="ngay_cham_cong"/>
                                    <field name="gio_vao"/>
                                    <field name="gio_ra"/>
                                    <field name="so_gio_nghi_trua"/>
                                    <field name="so_gio_lam" readonly="1"/>
                                    <field name="trang_thai" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_luong" model="ir.actions.act_window">
        <field name="name">Lương</field>
        <field name="res_model">luong</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
